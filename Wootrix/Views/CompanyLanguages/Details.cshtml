@model WootrixV2.Models.CompanyLanguages
@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Details"];
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}

<div class="bodyBox">
    <h2 style="color:@Context.Session.GetString("CompanyMainFontColor") !important">@Localizer["Details"]</h2>

    <div>
        <h4 style="color:@Context.Session.GetString("CompanyMainFontColor") !important">Company Languages</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.LanguageName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LanguageName)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID">@Localizer["Edit"]</a> |
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </div>
</div>