@model WootrixV2.Models.Company

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = Localizer["Create"];
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";

    var _companyName = Context.Session.GetString("CompanyName");
}
<div class="articleBackButtonContainer">
    <a asp-controller="Company" asp-action="Home" asp-route-id="@_companyName">
        <button class="articleBackButton button glow"><span class="glyphicon glyphicon-menu-left"></span>&nbsp;@Localizer["Back to Admin Menu"]</button>
    </a>
</div>
<div class="bodyBox">
    <h2>@Localizer["Create"]</h2>
    
    <h4>@Localizer["Company"]</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CompanyName" class="control-label"></label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyLogoImage" class="control-label"></label>
                    <input asp-for="CompanyLogoImage" type="file" class="form-control" />
                    <span asp-validation-for="CompanyLogoImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyBackgroundColor" class="control-label"></label>
                    <input asp-for="CompanyBackgroundColor" class="form-control" />
                    <span asp-validation-for="CompanyBackgroundColor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyBackgroundImage" class="control-label"></label>
                    <input asp-for="CompanyBackgroundImage" type="file" class="form-control" />
                    <span asp-validation-for="CompanyBackgroundImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyFocusImage" class="control-label"></label>
                    <input asp-for="CompanyFocusImage" type="file" size="60" class="form-control" />
                    <span asp-validation-for="CompanyFocusImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyTextMain" class="control-label"></label>
                    <input asp-for="CompanyTextMain" class="form-control" />
                    <span asp-validation-for="CompanyTextMain" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyTextSecondary" class="control-label"></label>
                    <input asp-for="CompanyTextSecondary" class="form-control" />
                    <span asp-validation-for="CompanyTextSecondary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyHighlightColor" class="control-label"></label>
                    <input asp-for="CompanyHighlightColor" type="color" class="form-control" />
                    <span asp-validation-for="CompanyHighlightColor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyHeaderBackgroundColor" class="control-label"></label>
                    <input asp-for="CompanyHeaderBackgroundColor" type="color" class="form-control" />
                    <span asp-validation-for="CompanyHeaderBackgroundColor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyMainFontColor" class="control-label"></label>
                    <input asp-for="CompanyMainFontColor" type="color" class="form-control" />
                    <span asp-validation-for="CompanyMainFontColor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyHeaderFontColor" class="control-label"></label>
                    <input asp-for="CompanyHeaderFontColor" type="color" class="form-control" />
                    <span asp-validation-for="CompanyHeaderFontColor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyNumberOfUsers" class="control-label"></label>
                    <input asp-for="CompanyNumberOfUsers" class="form-control" />
                    <span asp-validation-for="CompanyNumberOfUsers" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyNumberOfPushNotifications" class="control-label"></label>
                    <input asp-for="CompanyNumberOfPushNotifications" class="form-control" />
                    <span asp-validation-for="CompanyNumberOfPushNotifications" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer["Create"]" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>