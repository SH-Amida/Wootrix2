@model WootrixV2.Models.SegmentArticleComment
@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Delete"];
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}

<div class="bodyBox">
    <h2 style="color:@Context.Session.GetString("CompanyMainFontColor") !important">@Localizer["Delete"]</h2>

    <h3>@Localizer["Are you sure you want to delete this?"]</h3>
    <div>
        <h4 style="color:@Context.Session.GetString("CompanyMainFontColor") !important">@Localizer["Comment"]</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Comment)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="@Localizer["Delete"]" class="btn btn-default" /> |
            <a asp-action="Index">@Localizer["Back to List"]</a>
        </form>
    </div>
</div>