@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http;
@using System.Security.Claims
@using WootrixV2.Data;

@{
    var companyName = @Context.Session.GetString("CompanyName") ?? "Wootrix";
    var companyID = @Context.Session.GetInt32("CompanyID") ?? 0;
}

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wootrix</title>
    <meta name="apple-itunes-app" content="app-id=1034925784" />

    <link rel="icon" href="~/favicon.png" type="image/png">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/OldWootrix.css" rel="stylesheet" />
    <!-- jQUERY -->


    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" type="text/javascript"></script>*@
    <script src="~/js/jquery-sessionTimeout/jquery.sessionTimeout.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $.sessionTimeout({
                warnAfter: 900000, /*15mins*/
                redirAfter: 1200000, /*20 minutes*/
                logoutUrl: '/Identity/Account/Logout?returnUrl=/Company/Home/@companyName',
                redirUrl: '/Identity/Account/Logout?returnUrl=/Company/Home/@companyName',
                logoutUrl: '/Identity/Account/Logout?returnUrl=/Company/Home/@companyName',
            });
        });        
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body style="background-color:@Context.Session.GetString("CompanyBackgroundColor"); color:@Context.Session.GetString("CompanyMainFontColor")">


    <nav id="companyHeaderBackgroundColor" class="navbar navbar-inverse navbar-fixed-top" style="background-color:@Context.Session.GetString("CompanyHeaderBackgroundColor") !important; border-bottom: 0.5em solid @Context.Session.GetString("CompanyHighlightColor"); ">

        <div class="container">
            <div class="logo-bar">
                <figure class="logo-container">
                    <a asp-controller="Company" asp-action="Home" asp-route-id="@companyName">
                        @{
                            var fn = @companyName + "_" + @Context.Session.GetString("CompanyLogoImage");
                        }
                        <img id="companyLogo" src="~/images/Uploads/@fn" height="35" alt="Company Logo" class="img-responsive" />
                    </a>
                </figure>
            </div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <ul class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="color:@Context.Session.GetString("CompanyHeaderFontColor") !important">

                    @if (SignInManager.IsSignedIn(User))
                    {

                    
                        @if (User.HasClaim(ClaimTypes.Role, "Admin"))
                        {
                          

                            <li class="dropdown">
                                <a asp-area="" asp-controller="Company" asp-action="Index" style="color:@Context.Session.GetString("CompanyHeaderFontColor") !important">Manage Companies</a>
                                <ul class="dropdown-content">
                                    <li><a asp-controller="CompanyDepartments" asp-action="Index" style="color:@Context.Session.GetString("CompanyHeaderFontColor") !important">Company Departments</a></li>
                                    <li><a asp-controller="Users" asp-action="Index" asp-route-id="CompanyAdmin"  style="color:@Context.Session.GetString("CompanyHeaderFontColor") !important">Company Admins</a></li>
                                </ul>
                            </li>

                        }
                        @if (User.HasClaim(ClaimTypes.Role, "CompanyAdmin"))
                        {
                            <li class="dropdown">
                                <a asp-area="" asp-controller="" asp-action="" style="color:@Context.Session.GetString("CompanyHeaderFontColor") !important">Company Details</a>
                                <ul class="dropdown-content">
                                    <li><a asp-controller="CompanyGroups" asp-action="Index" asp-route-id="@Context.Session.GetString("CompanyName")" class="dropdown-item" style="color:@Context.Session.GetString("CompanyHeaderFontColor")">Groups</a></li>
                                    <li><a asp-controller="CompanyTopics" asp-action="Index" class="dropdown-item" style="color:@Context.Session.GetString("CompanyHeaderFontColor")">Topics</a></li>
                                    <li><a asp-controller="CompanyTypeOfUsers" asp-action="Index" class="dropdown-item" style="color:@Context.Session.GetString("CompanyHeaderFontColor")">Type of Users</a></li>
                                    <li><a asp-controller="CompanyLanguages" asp-action="Index" class="dropdown-item" style="color:@Context.Session.GetString("CompanyHeaderFontColor")">Languages</a></li>
                                    <li><a asp-controller="CompanySegments" asp-action="Index" class="dropdown-item" style="color:@Context.Session.GetString("CompanyHeaderFontColor")">Magazines</a></li>
                                    <li><a asp-controller="SegmentArticles" asp-action="Index" asp-route-id="@companyName" style="color:@Context.Session.GetString("CompanyHeaderFontColor")">Articles</a></li>
                                    <li><a asp-controller="SegmentArticleComments" asp-action="Admin" asp-route-id="@companyID" style="color:@Context.Session.GetString("CompanyHeaderFontColor")">Article Comments</a></li>
                                    <li><a asp-controller="CompanyPushNotifications" asp-action="Index" class="dropdown-item" style="color:@Context.Session.GetString("CompanyHeaderFontColor")">Push Notifications</a></li>
                                    <li><a asp-controller="Reports" asp-action="Index" class="dropdown-item" style="color:@Context.Session.GetString("CompanyHeaderFontColor")">Reports</a></li>
                                    <li><a asp-controller="Users" asp-action="Index" asp-route-id="User" class="dropdown-item" style="color:@Context.Session.GetString("CompanyHeaderFontColor")">User Management</a></li>
                                    <li><a asp-controller="Users" asp-action="Index" asp-route-id="CompanyAdmin" class="dropdown-item" style="color:@Context.Session.GetString("CompanyHeaderFontColor")">Company Admin Management</a></li>
                                </ul>
                            </li>
                        }
                    }




                </ul>

                @if (SignInManager.IsSignedIn(User))
                {


                    <partial name="_LoginPartial" />

                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        @*<li><a asp-area="Identity" asp-page="/Account/Register" asp-route-id="@Context.Session.GetString("CompanyName")" style="color:@Context.Session.GetString("CompanyHeaderFontColor") !important">Register</a></li>*@
                        <li><a asp-area="Identity" class="sign-in" asp-page="/Account/Login" asp-route-id="@Context.Session.GetString("CompanyName")" style="color:@Context.Session.GetString("CompanyHeaderFontColor") !important">Login</a></li>
                    </ul>
                }
        </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="body-content" style="background-color:@Context.Session.GetString("CompanyBackgroundColor"); color:@Context.Session.GetString("CompanyMainFontColor")">

        <div class="body-stuff">
            @RenderBody()
        </div>
        <!-- Footer -->
        <footer id="footer" style="background-color:@Context.Session.GetString("CompanyHeaderBackgroundColor") !important; border-bottom: 0.5em solid @Context.Session.GetString("CompanyHighlightColor"); ">
            <div id="companyHighlight2">
                <div class="right"></div>
                Powered by Wootrix @@ @DateTime.Now.Year
            </div>
        </footer>
    </div>
    


    @RenderSection("Scripts", required: false)
</body>
</html>
